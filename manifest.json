{
  "manifest_version": 3,
  "name": "Candis Auto-Button",
  "version": "1.0",
  "description": "Dr√ºckt automatisch einen bestimmten Button auf my.candis.io nach jedem Laden.",
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://my.candis.io/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "permissions": ["tabs", "storage"]
}